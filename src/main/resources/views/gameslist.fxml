                                                      <Font name="System Bold" size="18.0" />
                                                   </font>
                                                   <VBox.margin>
                                                      <Insets left="10.0" />
                                                   </VBox.margin>
                                                   <graphic>
                                                      <ImageView>
                                                         <image>
                                                            <Image url="@../icons/16x16/tools.png" />
                                                         </image>
                                                      </ImageView>
                                                   </graphic>
                                                </Label>
                                             </children>
                                             <cursor>
                                                <Cursor fx:constant="HAND" />
                                             </cursor>
                                          </VBox>
                                       </top>
                                       <center>
                                          <Button mnemonicParsing="false" styleClass="eden-button" text="%download" BorderPane.alignment="CENTER">
