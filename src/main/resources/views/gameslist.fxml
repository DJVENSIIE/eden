                                          <Image url="@../news/news1.png" />
                                       </image>
                                       <StackPane.margin>
                                          <Insets />
                                       </StackPane.margin>
                                       <cursor>
                                          <Cursor fx:constant="HAND" />
                                       </cursor>
                                    </ImageView>
                                    <BorderPane>
