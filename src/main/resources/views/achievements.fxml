<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="800.0" stylesheets="@../style/style.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lgs.eden.views.achievements.Achievements">
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" minHeight="400.0" minWidth="800.0" styleClass="app-background" vbarPolicy="ALWAYS" BorderPane.alignment="CENTER">
         <content>
            <VBox fx:id="achievements" prefHeight="200.0" prefWidth="100.0" spacing="20.0" styleClass="app-background">
               <padding>
                  <Insets left="20.0" right="20.0" top="10.0" />
               </padding>
            </VBox>
         </content></ScrollPane>
    </center>
   <top>
      <FlowPane alignment="TOP_CENTER" styleClass="app-background" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <children>
              <Label alignment="CENTER" styleClass="yellow-text" text="%achievements">
                  <font>
                      <Font name="System Bold" size="24.0" />
                  </font>
               <padding>
                  <Insets bottom="5.0" top="15.0" />
               </padding>
              </Label>
         </children>
      </FlowPane>
   </top>
   <padding>
      <Insets left="10.0" right="10.0" top="20.0" />
   </padding>
</BorderPane>
