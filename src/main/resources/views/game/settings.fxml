<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="800.0" stylesheets="@../../style/style.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lgs.eden.views.gameslist.GameSettings">
   <center>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <VBox styleClass="app-background">
               <children>
                  <BorderPane maxWidth="800.0">
                     <right>
                        <Button mnemonicParsing="false" onAction="#onUninstallGame" styleClass="eden-button" text="%uninstall" BorderPane.alignment="CENTER" />
                     </right>
                     <left>
                        <Label styleClass="white-text" text="%uninstall_desc" BorderPane.alignment="CENTER">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                     </left>
                  </BorderPane>
                  <Label styleClass="blue-text" text="%uninstall_desc_full" wrapText="true">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <VBox.margin>
                        <Insets right="10.0" top="5.0" />
                     </VBox.margin>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox layoutX="10.0" layoutY="92.0" styleClass="app-background">
               <children>
                  <BorderPane maxWidth="800.0">
                     <right>
                        <Button mnemonicParsing="false" onAction="#onLibraryRemoveGame" styleClass="eden-button" text="%library_remove" BorderPane.alignment="CENTER" />
                     </right>
                     <left>
                        <Label styleClass="white-text" text="%library_remove_desc" BorderPane.alignment="CENTER">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                     </left>
                  </BorderPane>
                  <Label styleClass="blue-text" text="%library_remove_desc_full" wrapText="true">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <VBox.margin>
                        <Insets right="10.0" top="5.0" />
                     </VBox.margin>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox styleClass="app-background">
               <children>
                  <BorderPane maxWidth="800.0">
                     <right>
                        <Button mnemonicParsing="false" onAction="#onUninstallAndRemoveGame" styleClass="eden-button" text="%library_and_uninstall" BorderPane.alignment="CENTER" />
                     </right>
                     <left>
                        <Label styleClass="white-text" text="%library_and_uninstall_desc" BorderPane.alignment="CENTER">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                     </left>
                  </BorderPane>
                  <Label styleClass="blue-text" text="%library_and_uninstall_desc_full" wrapText="true">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <VBox.margin>
                        <Insets right="10.0" top="5.0" />
                     </VBox.margin>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
