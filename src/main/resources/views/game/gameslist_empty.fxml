<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<FlowPane alignment="CENTER" prefHeight="400.0" prefWidth="800.0" styleClass="app-background"
          stylesheets="@../../style/style.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.lgs.eden.views.gameslist.EmptyGameList">
    <children>
        <VBox alignment="TOP_CENTER" spacing="20.0">
            <children>
                <Label styleClass="yellow-text" text="%no_games">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
                <Button graphicTextGap="10.0" mnemonicParsing="false" onAction="#goToMarketplace"
                        styleClass="eden-button" text="Marketplace">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <graphic>
                        <ImageView>
                            <image>
                                <Image url="@../../icons/16x16/shop.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </VBox>
    </children>
</FlowPane>
