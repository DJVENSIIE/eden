<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="500.0" prefWidth="300.0" styleClass="app-background" stylesheets="@../style/style.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lgs.eden.views.profile.messages.SearchForFriends">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <children>
            <Label styleClass="yellow-text" text="It seems we have some problems with the search bar, please press enter again if the result is wrong" textAlignment="CENTER" wrapText="true" />
            <TextField fx:id="search" focusTraversable="false" onAction="#onSearch" promptText="friend name or id">
               <padding>
                  <Insets bottom="10.0" right="10.0" top="10.0" />
               </padding>
               <styleClass>
                  <String fx:value="app-background" />
                  <String fx:value="red-border-bottom" />
               </styleClass>
            </TextField>
         </children>
      </VBox>
   </top>
   <center>
      <ListView fx:id="friends" prefHeight="200.0" prefWidth="200.0" styleClass="app-background" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
