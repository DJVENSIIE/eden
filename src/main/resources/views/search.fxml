<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane prefHeight="500.0" prefWidth="300.0" styleClass="app-background" stylesheets="@../style/style.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lgs.eden.views.profile.messages.SearchForFriends">
   <top>
      <TextField onAction="#onSearch"  fx:id="search" focusTraversable="false" promptText="friend name or id" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" right="10.0" top="10.0" />
         </padding>
         <styleClass>
            <String fx:value="app-background" />
            <String fx:value="red-border-bottom" />
         </styleClass>
      </TextField>
   </top>
   <center>
      <ListView fx:id="friends" prefHeight="200.0" prefWidth="200.0" styleClass="app-background" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
