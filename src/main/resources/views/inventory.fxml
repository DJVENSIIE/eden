<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane styleClass="app-background" stylesheets="@../style/style.css" xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lgs.eden.views.inventory.Inventory">
    <center>
        <BorderPane prefHeight="400.0" prefWidth="600.0" styleClass="white-box" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
            <top>
                <Label text="%inventory" BorderPane.alignment="TOP_LEFT">
                    <BorderPane.margin>
                        <Insets left="20.0" top="20.0"/>
                    </BorderPane.margin>
                    <font>
                        <Font name="System Bold" size="32.0"/>
                    </font>
                </Label>
            </top>
            <center>
                <Label text="%not_available" BorderPane.alignment="CENTER">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
            </center>
        </BorderPane>
    </center>
</BorderPane>
